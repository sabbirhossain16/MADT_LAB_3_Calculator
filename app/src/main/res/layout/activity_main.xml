<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="36sp"
        android:gravity="end|center_vertical"
        android:background="#F5F9FF"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="6"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toBottomOf="@id/txtDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <Button android:text="C" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="⌫" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="±" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="√" android:background="@drawable/btn_style" android:backgroundTint="@null"/>

        <Button android:text="7" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="8" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="9" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="÷" android:background="@drawable/btn_style" android:backgroundTint="@null"/>

        <Button android:text="4" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="5" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="6" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="×" android:background="@drawable/btn_style" android:backgroundTint="@null"/>

        <Button android:text="1" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="2" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="3" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="-" android:background="@drawable/btn_style" android:backgroundTint="@null"/>

        <Button android:text="0" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="." android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="=" android:background="@drawable/btn_style" android:backgroundTint="@null"/>
        <Button android:text="+" android:background="@drawable/btn_style" android:backgroundTint="@null"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
